{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "paths": {
      // "keeperApi/*": ["apps/Keeper-API/*"],
      // "keeperQueuesService/*": ["apps/Keeper-Queues-Service/*"],
      // "keeperUi/*": ["apps/Keeper-UI/*"],
      // "keeperWebApp/*": ["apps/Keeper-WebApp/*"],
      "keeperAssets/*": ["packages/keeperAssets/*"],
      "keeperConstants/*": ["packages/keeperConstants/*"],
      "keeperEnvironment/*": ["packages/keeperEnvironment/*"],
      "keeperServices/*": ["packages/keeperServices/*"],
      "keeperTypes/*": ["packages/keeperTypes/*"],
      "keeperUtils/*": ["packages/keeperUtils/*"]
    }
  },
  "include": ["packages/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
